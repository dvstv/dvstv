@model MvcApp.Models.Product
@{
    ViewData["Title"] = "Details";
}
<h1>@ViewData["Title"]</h1>
<div class="mb-3">
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Price</dt>
        <dd class="col-sm-9">@Model.Price.ToString("0.##")</dd>

        <dt class="col-sm-3">In stock</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.InStock)</dd>

        <dt class="col-sm-3">Created at</dt>
        <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd")</dd>
    </dl>
</div>
<div>
    <a class="btn btn-secondary" asp-action="Index">Back</a>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
</div>
