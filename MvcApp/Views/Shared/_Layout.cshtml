@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="@System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MvcApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Products" asp-action="Index">MvcApp</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Products" asp-action="Index">Products</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item me-2">
                        <form asp-controller="Culture" asp-action="Set" method="post" class="d-flex">
                            <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                            <select name="culture" class="form-select form-select-sm me-2" onchange="this.form.submit()">
                                <option value="en" selected="@(System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName=="en")">EN</option>
                                <option value="ru" selected="@(System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName=="ru")">RU</option>
                            </select>
                        </form>
                    </li>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item"><span class="navbar-text me-2">@User.Identity?.Name</span></li>
                        <li class="nav-item">
                            <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Products", new { area = "" })" method="post">
                                <button type="submit" class="btn btn-sm btn-outline-light">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="btn btn-sm btn-outline-light me-2" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
                        <li class="nav-item"><a class="btn btn-sm btn-primary" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
                    }
                </ul>
            </div>
        </div>
    </header>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="border-top py-3">
        <div class="container">
            <span class="text-muted">&copy; @DateTime.Now.Year - MvcApp</span>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
